---
const SITE_URL = "https://theblackworldjournal.vercel.app";
const SITE_NAME = "The Black World Journal";
const PAGE_TITLE = `${SITE_NAME} â€” Page Not Found`;
const DESCRIPTION = "This page could not be found.";
const OG_IMAGE = `${SITE_URL}/images/black-world-journal-logo.jpeg`;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="generator" content={Astro.generator} />
		<title>{PAGE_TITLE}</title>
		<meta name="description" content={DESCRIPTION} />
		<meta property="og:title" content={PAGE_TITLE} />
		<meta property="og:description" content={DESCRIPTION} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={`${SITE_URL}/404`} />
		<meta property="og:image" content={OG_IMAGE} />
		<meta property="og:site_name" content={SITE_NAME} />
		<meta name="twitter:card" content="summary" />
		<meta name="twitter:title" content={PAGE_TITLE} />
		<meta name="twitter:description" content={DESCRIPTION} />
		<meta name="twitter:image" content={OG_IMAGE} />
	</head>
	<body>
		<div class="sheet">
			<header class="masthead">
				<div class="corner-row">
					<span class="corner-left">THE BLACK WORLD</span>
					<span class="corner-right">2026</span>
				</div>
				<div class="rule"></div>
				<h1>PAGE NOT FOUND</h1>
				<p class="subhead">The page you are looking for does not exist.</p>
			</header>

			<main class="content">
				<a class="headline-button" href="/">Return Home</a>
			</main>
		</div>
	</body>
</html>

<style>
	@import url("https://fonts.googleapis.com/css2?family=EB+Garamond:wght@400;600;700&display=swap");

	:global(body) {
		margin: 0;
		font-family: "EB Garamond", "Times New Roman", serif;
		color: #111;
		background: #fff;
		min-height: 100vh;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	:global(*) {
		box-sizing: border-box;
	}

	.sheet {
		width: min(900px, 100%);
		padding: 28px 20px 24px;
	}

	.masthead {
		display: flex;
		flex-direction: column;
		gap: 10px;
		text-align: center;
		padding-bottom: 12px;
		padding-top: 18px;
		position: relative;
	}

	.corner-row {
		display: flex;
		justify-content: space-between;
		font-size: 0.75rem;
		letter-spacing: 0.25em;
		text-transform: uppercase;
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		padding: 0 6px;
	}

	.rule {
		border-top: 2px solid #111;
		margin: 4px 0 10px;
	}

	h1 {
		margin: 0;
		font-size: clamp(2.1rem, 6vw, 3.2rem);
		letter-spacing: 0.18em;
		text-transform: uppercase;
	}

	.subhead {
		margin: 0;
		text-transform: uppercase;
		letter-spacing: 0.12em;
		font-size: 0.9rem;
		line-height: 1.5;
	}

	.content {
		display: grid;
		gap: 18px;
		padding-top: 20px;
		text-align: center;
		animation: rise-in 0.6s ease-out both;
	}

	.headline-button {
		color: #111;
		text-decoration: none;
		font-weight: 700;
		text-transform: uppercase;
		letter-spacing: 0.14em;
		font-size: clamp(0.95rem, 3vw, 1.2rem);
		border: 2px solid #111;
		padding: 12px 22px;
		display: inline-block;
	}

	@keyframes rise-in {
		from {
			opacity: 0;
			transform: translateY(12px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@media (prefers-reduced-motion: reduce) {
		* {
			animation: none !important;
			transition: none !important;
		}
	}

	@media (max-width: 640px) {
		.sheet {
			padding: 22px 16px 20px;
		}

		.corner-row {
			font-size: 0.62rem;
			letter-spacing: 0.22em;
			padding: 0 2px;
		}

		.subhead {
			letter-spacing: 0.05em;
			font-size: 0.85rem;
		}
	}
</style>
